<div class="col-md-10 p-4">
    <div class="d-flex justify-content-between mb-4">
        <h4>Your Project</h4>
        <button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#addProject">
        + Project
        </button>
    </div>

    <table class="table bg-white border rounded">
        <thead>
            <tr>
                <th>Project</th>
                <th>Description</th>
                <th>Tech</th>
            </tr>
        </thead>
        <tbody>
            {{#each projects}}
            <tr>
                <td>{{name}}</td>
                <td>{{description}}</td>
                <td>{{tech}}</td>
                <td>
                <form action="/dashboard/project/{{id}}" method="post">
                    <a href="/dashboard/edit-project/{{id}}"><i class="edit bi bi-pencil"></i></a>
                    <button class="btn btn-sm delete ms-2" type="submit"><i class="bi bi-trash"></i></button>
                </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <div class="modal fade" id="addProject" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Add Experience</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/dashboard/project" method="post" enctype="multipart/form-data" class="p-4 bg-white rounded shadow-sm">
                        <div class="mb-3">
                            <label for="" class="form-label">Project</label>
                            <input type="text" name="project" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label for="" class="form-label">Description</label>
                            <input type="text" name="description" class="form-control">
                        </div>
                        <div class="mb-3">
                            <div>
                                <label class="form-label">Tech</label>
                                <input type="text" name="tech" class="form-control">
                            </div>
                            <label class="form-label">Image</label>
                            <input type="file" name="image" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-success">Add</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>