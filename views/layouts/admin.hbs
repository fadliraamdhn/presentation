    <title>Dashboard</title>
</head>
<body>
    <header>
        <div class="navbar d-flex justify-content-between px-4 py-3">
            <div>
                <a class="navbar-brand" href="/dashboard">&lt;/&gt; Portfolio Dashboard</a>
            </div>
            <div>
                <a href="/logout" class="btn btn-success">Logout</a>
            </div>
        </div>
    </header>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2 sidebar pt-4">
                <a href="/dashboard">Home</a>
                <a href="/dashboard/tech">Tech</a>
                <a href="/dashboard/experience">Experience</a>
                <a href="/dashboard/project">Project</a>
            </div>
            {{{body}}}
        </div>
    </div>
    {{#if success}}
        <div class="flash-message flash-success">{{success}}</div>
    {{/if}}
    {{#if error}}
        <div class="flash-message flash-error">{{error}}</div>
    {{/if}}
</body>
