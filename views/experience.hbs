<div class="col-md-10 p-4">
    <div class="d-flex justify-content-between mb-4">
        <h4>Experience</h4>
        <h4>Masukan Dari Yang Terbaru Dahulu</h4>
        <button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#addExperience">
        + Experience
        </button>
    </div>

    <table class="table bg-white border rounded">
        <thead>
            <tr>
                <th>Position</th>
                <th>Company</th>
                <th>Start & End Date</th>
                <th>Description</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each experience}}
            <tr>
                <td>{{position}}</td>
                <td>{{company}}</td>
                <td>{{formatMonthYear start_date}} - {{formatMonthYear end_date}}</td>
                <td>{{description}}</td>
                <td>{{tech}}</td>
                <td>
                <form action="/dashboard/experience/{{id}}" method="post">
                    <a href="/dashboard/edit-experience/{{id}}"><i class="edit bi bi-pencil"></i></a>
                    <button class="btn btn-sm delete ms-2" type="submit"><i class="bi bi-trash"></i></button>
                </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <div class="modal fade" id="addExperience" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Add Experience</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/dashboard/experience" method="post" enctype="multipart/form-data" class="p-4 bg-white rounded shadow-sm">
                        <div class="mb-3">
                            <label for="" class="form-label">Position</label>
                            <input type="text" name="position" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label for="" class="form-label">Company</label>
                            <input type="text" name="company" class="form-control">
                        </div>
                        <div class="mb-3">
                            <div>
                                <label class="form-label">End Date</label>
                                <input type="date" name="endDate" class="form-control">
                            </div>
                            <div>
                                <label class="form-label">Start Date</label>
                                <input type="date" name="startDate" class="form-control">
                            </div>
                        </div>
                        <div>
                            <label class="form-label">Description</label>
                            <textarea placeholder="pisahkan menggunakan titik (.)" class="form-control" name="description" row="3"></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Tech</label>
                            <textarea placeholder="pisahkan menggunakan titik (.)" name="tech" class="form-control" row="3"></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Image</label>
                            <input type="file" name="image" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-success">Add</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>